<%- include('partials/header') %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    
    <div class="bg-white border-2 border-dashed border-slate-300 rounded-xl p-6 flex flex-col items-center justify-center cursor-pointer hover:border-blue-500 hover:bg-blue-50 transition group" onclick="document.getElementById('createModal').showModal()">
        <div class="w-12 h-12 rounded-full bg-slate-100 flex items-center justify-center group-hover:bg-blue-100 transition">
            <span class="text-2xl text-slate-400 group-hover:text-blue-500">+</span>
        </div>
        <p class="mt-3 text-slate-500 font-medium group-hover:text-blue-600">创建新小说</p>
    </div>

    <% novels.forEach(function(novel) { %>
    <a href="/novel/<%= novel._id %>" class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden hover:shadow-md hover:-translate-y-1 transition duration-300">
        <div class="h-32 bg-slate-200 relative">
            <img src="<%= novel.cover %>" class="w-full h-full object-cover opacity-80" alt="cover">
            <div class="absolute top-2 right-2 px-2 py-1 bg-black/50 text-white text-xs rounded backdrop-blur-sm">
                <%= novel.status === 'serial' ? '连载中' : '已完结' %>
            </div>
        </div>
        <div class="p-4">
            <h3 class="font-bold text-slate-800 truncate"><%= novel.title %></h3>
            <p class="text-xs text-slate-500 mt-1">作者: <%= novel.author %></p>
            <p class="text-sm text-slate-600 mt-3 line-clamp-2 h-10"><%= novel.description || '暂无简介' %></p>
            <div class="mt-4 flex items-center justify-between text-xs text-slate-400 border-t pt-3">
                <span>更新于: <%= new Date(novel.updatedAt).toLocaleDateString() %></span>
            </div>
        </div>
    </a>
    <% }); %>

</div>

<dialog id="createModal" class="p-0 rounded-lg shadow-xl backdrop:bg-black/30 w-full max-w-md">
    <div class="bg-white p-6">
        <h3 class="text-lg font-bold mb-4">创建新小说</h3>
        <form action="/novel/create" method="POST">
            <div class="mb-4">
                <label class="block text-sm font-medium text-slate-700 mb-1">小说标题</label>
                <input type="text" name="title" required class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-slate-700 mb-1">简介</label>
                <textarea name="description" rows="3" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"></textarea>
            </div>
            <div class="flex justify-end gap-2">
                <button type="button" class="px-4 py-2 text-slate-500 hover:bg-slate-100 rounded" onclick="document.getElementById('createModal').close()">取消</button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">立即创建</button>
            </div>
        </form>
    </div>
</dialog>

<%- include('partials/footer') %>