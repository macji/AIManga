<%- include('partials/header') %>

<div class="max-w-6xl mx-auto px-4 mt-8" x-data="{ showCreateModal: false }">
    
    <div class="flex justify-between items-end mb-8">
        <div>
            <h1 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                <span>📚</span> 我的作品库
            </h1>
            <p class="text-slate-500 text-sm mt-1 ml-1">在这里管理你的所有创作</p>
        </div>
        <button @click="showCreateModal = true" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition shadow-sm flex items-center gap-2 hover:shadow-md">
            <span>+</span> 创建新作品
        </button>
    </div>

    <% if (novels.length === 0) { %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-16 text-center text-slate-400 flex flex-col items-center">
            <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center text-4xl mb-4">📭</div>
            <h3 class="text-lg font-medium text-slate-600 mb-2">还没有作品</h3>
            <p class="text-sm mb-6">点击右上角按钮开始你的第一次创作吧</p>
        </div>
    <% } else { %>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
            <% novels.forEach(novel => { %>
                <a href="/novel/<%= novel._id %>" class="group block bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden hover:shadow-lg hover:-translate-y-1 hover:border-blue-300 transition-all duration-300 flex flex-col h-full">
                    
                    <div class="aspect-[3/4] bg-slate-100 relative overflow-hidden border-b border-slate-100">
                        <img src="/images/<%= novel._id %>/logo.png" 
                             alt="<%= novel.title %>"
                             class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                             onerror="this.onerror=null; this.src='https://placehold.co/300x400?text=No+Cover'">
                        
                        <div class="absolute top-2 right-2">
                            <span class="px-2 py-1 text-[10px] font-bold rounded shadow-sm backdrop-blur-sm
                                <%= novel.status === 'completed' ? 'bg-green-100/90 text-green-700' : 'bg-blue-100/90 text-blue-700' %>">
                                <%= novel.status === 'completed' ? '已完结' : '连载中' %>
                            </span>
                        </div>
                    </div>
                    
                    <div class="p-4 flex flex-col flex-1">
                        <h3 class="font-bold text-slate-800 text-base mb-1 truncate group-hover:text-blue-600 transition-colors" title="<%= novel.title %>">
                            <%= novel.title %>
                        </h3>
                        
                        <div class="flex items-center gap-2 text-xs text-slate-500 mb-3">
                            <span class="truncate">👤 <%= novel.author || '未知作者' %></span>
                        </div>
                        
                        <p class="text-xs text-slate-400 line-clamp-2 leading-relaxed mb-4 flex-1">
                            <%= novel.description || '暂无简介...' %>
                        </p>
                        
                        <div class="pt-3 border-t border-slate-50 flex justify-between items-center text-[10px] text-slate-400">
                            <span>📅 <%= new Date(novel.createdAt).toLocaleDateString() %></span>
                            <span class="group-hover:translate-x-1 transition-transform text-blue-400">管理 →</span>
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>
    <% } %>

    <div x-show="showCreateModal" class="fixed inset-0 z-50 flex items-center justify-center p-4" style="display: none;" 
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100">
        <div class="absolute inset-0 bg-slate-900/40 backdrop-blur-sm" @click="showCreateModal = false"></div>
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg relative z-10 overflow-hidden flex flex-col">
            <div class="px-6 py-4 border-b border-slate-100 bg-slate-50 flex justify-between items-center">
                <h3 class="font-bold text-lg text-slate-800">✨ 创建新作品</h3>
                <button @click="showCreateModal = false" class="text-slate-400 hover:text-slate-600 text-xl">&times;</button>
            </div>
            <form action="/novel/create" method="POST">
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">作品名称</label>
                        <input type="text" name="title" required class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500" placeholder="请输入作品名称">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">一句话简介</label>
                        <textarea name="description" rows="3" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500" placeholder="简要描述你的故事..."></textarea>
                    </div>
                </div>
                <div class="px-6 py-4 border-t border-slate-100 bg-slate-50 flex justify-end gap-3">
                    <button type="button" @click="showCreateModal = false" class="px-4 py-2 text-slate-600 hover:bg-slate-200 rounded-lg text-sm font-medium transition">取消</button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition">立即创建</button>
                </div>
            </form>
        </div>
    </div>

</div>

<script src="//unpkg.com/alpinejs" defer></script>
<%- include('partials/footer') %>