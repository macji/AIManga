<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('novelDetailApp', () => ({
            showEditInfo: false,
            showCreateChapter: false,
            showEditChapter: false,
            editData: { id: '', title: '', order: '', content: '' },
            
