                        event.target.value = ''; // é‡ç½® input ä»¥ä¾¿èƒ½é‡å¤ä¸Šä¼ åŒä¸€æ–‡ä»¶
                    }
                };
                reader.readAsDataURL(file);
            }
        }));
    });
</script>
