<%- include('partials/header') %>

<div class="space-y-6" x-data="{ promptTab: 'script' }"> <div class="flex items-center justify-end">
        <div class="flex gap-3">
            <button onclick="document.getElementById('promptSettingsModal').showModal()" class="px-4 py-2 bg-purple-600 text-white rounded-lg text-sm hover:bg-purple-700 shadow-sm transition flex items-center gap-1">
                <span>⚙️</span> 提示词配置
            </button>
            
            <button onclick="document.getElementById('editNovelModal').showModal()" class="px-4 py-2 bg-white border border-slate-300 text-slate-700 rounded-lg text-sm hover:bg-slate-50 transition">
                编辑信息
            </button>
            <button onclick="document.getElementById('addChapterModal').showModal()" class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 shadow-sm transition flex items-center">
                <span class="mr-1">+</span> 新增章节
            </button>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 flex gap-6">
        <div class="w-32 h-44 flex-shrink-0 bg-slate-200 rounded-lg overflow-hidden relative group">
            <img src="<%= novel.cover %>" class="w-full h-full object-cover" alt="Cover">
            <div class="absolute inset-0 bg-black/10 group-hover:bg-black/20 transition"></div>
        </div>
        <div class="flex-1">
            <h1 class="text-2xl font-bold text-slate-800 mb-2"><%= novel.title %></h1>
            <div class="flex items-center gap-4 text-sm text-slate-500 mb-4">
                <span class="bg-blue-50 text-blue-600 px-2 py-0.5 rounded text-xs font-medium">
                    <%= novel.status === 'serial' ? '连载中' : '已完结' %>
                </span>
                <span>作者: <%= novel.author %></span>
                <span>创建于: <%= new Date(novel.createdAt).toLocaleDateString() %></span>
            </div>
            <p class="text-slate-600 text-sm leading-relaxed max-w-2xl whitespace-pre-wrap"><%= novel.description || '暂无简介...' %></p>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center bg-slate-50/50">
            <h3 class="font-semibold text-slate-700">章节列表 (<%= chapters.length %>)</h3>
        </div>
        <table class="w-full text-sm text-left">
            <thead class="text-xs text-slate-500 uppercase bg-slate-50 border-b border-slate-100">
                <tr>
                    <th class="px-6 py-3 w-16">序号</th>
                    <th class="px-6 py-3">章节标题</th>
                    <th class="px-6 py-3 w-32">字数</th>
                    <th class="px-6 py-3 w-48">更新时间</th>
                    <th class="px-6 py-3 w-32 text-right">操作</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                <% if (chapters.length === 0) { %>
                <tr>
                    <td colspan="5" class="px-6 py-12 text-center text-slate-400">暂无章节</td>
                </tr>
                <% } else { %>
                    <% chapters.forEach(function(chapter) { %>
                    <tr class="hover:bg-slate-50 transition group">
                        <td class="px-6 py-4 text-slate-400 font-mono text-xs">#<%= chapter.order %></td>
                        <td class="px-6 py-4 font-medium text-slate-700">
                            <a href="/chapter/<%= chapter._id %>" class="hover:text-blue-600 hover:underline"><%= chapter.title %></a>
                        </td>
                        <td class="px-6 py-4 text-slate-500"><%= chapter.content.length %> 字</td>
                        <td class="px-6 py-4 text-slate-400 text-xs"><%= new Date(chapter.updatedAt).toLocaleString() %></td>
                        <td class="px-6 py-4 text-right flex justify-end gap-3">
                            <button onclick="openEditChapter('<%= chapter._id %>')" class="text-blue-600 hover:text-blue-800 font-medium opacity-0 group-hover:opacity-100 transition">编辑</button>
                            <form action="/chapter/<%= chapter._id %>/delete" method="POST" onsubmit="return confirm('确定删除？')">
                                <button type="submit" class="text-red-500 hover:text-red-700 font-medium opacity-0 group-hover:opacity-100 transition">删除</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<dialog id="promptSettingsModal" class="p-0 rounded-xl shadow-2xl backdrop:bg-slate-900/40 w-full max-w-4xl open:animate-fade-in">
    <div class="flex flex-col h-[85vh]" x-data="{ activeTab: 'script' }">
        <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center bg-slate-50">
            <h3 class="text-lg font-bold text-slate-800">提示词配置 (Prompt Settings)</h3>
            <button onclick="document.getElementById('promptSettingsModal').close()" class="text-slate-400 hover:text-slate-600">✕</button>
        </div>

        <form action="/novel/<%= novel._id %>/update" method="POST" class="flex-1 flex flex-col overflow-hidden">
            <input type="hidden" name="title" value="<%= novel.title %>">
            
            <div class="px-6 pt-4 flex gap-2 border-b border-slate-200">
                <button type="button" @click="activeTab = 'script'" :class="activeTab === 'script' ? 'border-purple-600 text-purple-600' : 'border-transparent text-slate-500 hover:text-slate-700'" class="px-4 py-2 border-b-2 font-medium text-sm transition">
                    剧本生成 (Script)
                </button>
                <button type="button" @click="activeTab = 'visual'" :class="activeTab === 'visual' ? 'border-purple-600 text-purple-600' : 'border-transparent text-slate-500 hover:text-slate-700'" class="px-4 py-2 border-b-2 font-medium text-sm transition">
                    视觉设定 (Visual)
                </button>
                <button type="button" @click="activeTab = 'image'" :class="activeTab === 'image' ? 'border-purple-600 text-purple-600' : 'border-transparent text-slate-500 hover:text-slate-700'" class="px-4 py-2 border-b-2 font-medium text-sm transition">
                    画面生图 (Image)
                </button>
                <button type="button" @click="activeTab = 'audio'" :class="activeTab === 'audio' ? 'border-purple-600 text-purple-600' : 'border-transparent text-slate-500 hover:text-slate-700'" class="px-4 py-2 border-b-2 font-medium text-sm transition">
                    语音字幕 (Audio)
                </button>
            </div>

            <div class="flex-1 p-6 overflow-y-auto bg-slate-50/50">
                
                <div x-show="activeTab === 'script'" class="h-full flex flex-col">
                    <label class="block text-sm font-bold text-slate-700 mb-2">小说转脚本 Prompt 模板</label>
                    <p class="text-xs text-slate-500 mb-2">用于指导大模型将小说原文拆解为分镜脚本。</p>
                    <textarea name="prompts[script]" class="flex-1 w-full p-4 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 outline-none font-mono text-sm leading-relaxed resize-none"><%= novel.prompts ? novel.prompts.script : '' %></textarea>
                </div>

                <div x-show="activeTab === 'visual'" class="h-full flex flex-col" style="display: none;">
                    <label class="block text-sm font-bold text-slate-700 mb-2">视觉设定提取 Prompt 模板</label>
                    <p class="text-xs text-slate-500 mb-2">用于提取角色外貌、场景特征。</p>
                    <textarea name="prompts[visual]" class="flex-1 w-full p-4 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 outline-none font-mono text-sm leading-relaxed resize-none"><%= novel.prompts ? novel.prompts.visual : '' %></textarea>
                </div>

                <div x-show="activeTab === 'image'" class="h-full flex flex-col" style="display: none;">
                    <label class="block text-sm font-bold text-slate-700 mb-2">生图基础 Prompt (Base Style)</label>
                    <p class="text-xs text-slate-500 mb-2">这些词会自动追加到每一个分镜的生图提示词前面，通常用于统一定义画风、质量词。</p>
                    <textarea name="prompts[image]" class="flex-1 w-full p-4 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 outline-none font-mono text-sm leading-relaxed resize-none"><%= novel.prompts ? novel.prompts.image : '' %></textarea>
                </div>

                <div x-show="activeTab === 'audio'" class="h-full flex flex-col" style="display: none;">
                    <label class="block text-sm font-bold text-slate-700 mb-2">语音/字幕提取 Prompt 模板</label>
                    <p class="text-xs text-slate-500 mb-2">用于生成 TTS 所需的 JSON 数据。</p>
                    <textarea name="prompts[audio]" class="flex-1 w-full p-4 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 outline-none font-mono text-sm leading-relaxed resize-none"><%= novel.prompts ? novel.prompts.audio : '' %></textarea>
                </div>
            </div>

            <div class="px-6 py-4 bg-white border-t border-slate-100 flex justify-end gap-3">
                <button type="button" onclick="document.getElementById('promptSettingsModal').close()" class="px-5 py-2 text-slate-600 hover:bg-slate-100 rounded-lg text-sm transition">取消</button>
                <button type="submit" class="px-5 py-2 bg-purple-600 text-white rounded-lg text-sm hover:bg-purple-700 shadow-sm transition font-medium">保存配置</button>
            </div>
        </form>
    </div>
</dialog>

<dialog id="editNovelModal" class="p-0 rounded-xl shadow-2xl backdrop:bg-slate-900/40 w-full max-w-lg open:animate-fade-in">
    <div class="bg-white">
        <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center">
            <h3 class="text-lg font-bold text-slate-800">编辑作品信息</h3>
            <button onclick="document.getElementById('editNovelModal').close()" class="text-slate-400 hover:text-slate-600">✕</button>
        </div>
        <form action="/novel/<%= novel._id %>/update" method="POST" class="p-6 space-y-4">
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">作品名称</label>
                <input type="text" name="title" value="<%= novel.title %>" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">作者</label>
                    <input type="text" name="author" value="<%= novel.author %>" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">连载状态</label>
                    <select name="status" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none bg-white">
                        <option value="serial" <%= novel.status === 'serial' ? 'selected' : '' %>>连载中</option>
                        <option value="completed" <%= novel.status === 'completed' ? 'selected' : '' %>>已完结</option>
                    </select>
                </div>
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">封面图片链接</label>
                <input type="text" name="cover" value="<%= novel.cover %>" placeholder="https://..." class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none text-sm font-mono text-slate-600">
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">作品简介</label>
                <textarea name="description" rows="4" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none resize-none"><%= novel.description %></textarea>
            </div>
            <div class="pt-2 flex justify-end gap-3">
                <button type="button" onclick="document.getElementById('editNovelModal').close()" class="px-4 py-2 text-slate-500 hover:bg-slate-100 rounded-lg text-sm transition">取消</button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 shadow-sm transition font-medium">保存修改</button>
            </div>
        </form>
    </div>
</dialog>

<dialog id="addChapterModal" class="p-0 rounded-xl shadow-2xl backdrop:bg-slate-900/40 w-full max-w-2xl open:animate-fade-in">
    <div class="flex flex-col h-[80vh]">
        <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center">
            <h3 class="text-lg font-bold text-slate-800">新建章节</h3>
            <button onclick="document.getElementById('addChapterModal').close()" class="text-slate-400 hover:text-slate-600">✕</button>
        </div>
        <form action="/chapter/create" method="POST" class="flex-1 flex flex-col overflow-hidden">
            <input type="hidden" name="novelId" value="<%= novel._id %>">
            
            <div class="p-6 flex-1 overflow-y-auto space-y-4">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">
                        章节序号 <span class="text-slate-400 font-normal">(用于生成 ep 文件夹，如 ep1)</span>
                    </label>
                    <input type="number" name="order" placeholder="默认自动递增，也可手动指定..." 
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition font-mono">
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">章节标题</label>
                    <input type="text" name="title" placeholder="例如：第1章 穿越" required 
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition">
                </div>
                
                <div class="flex-1 flex flex-col h-full">
                    <label class="block text-sm font-medium text-slate-700 mb-1">正文内容</label>
                    <textarea name="content" placeholder="在此粘贴小说正文..." required
                              class="w-full flex-1 min-h-[300px] px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition font-mono text-sm leading-relaxed resize-none"></textarea>
                </div>
            </div>

            <div class="px-6 py-4 bg-slate-50 border-t border-slate-100 flex justify-end gap-3">
                <button type="button" onclick="document.getElementById('addChapterModal').close()" class="px-5 py-2 text-slate-600 hover:bg-slate-200 rounded-lg text-sm transition">取消</button>
                <button type="submit" class="px-5 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 shadow-sm transition font-medium">保存章节</button>
            </div>
        </form>
    </div>
</dialog>

<dialog id="editChapterModal" class="p-0 rounded-xl shadow-2xl backdrop:bg-slate-900/40 w-full max-w-2xl open:animate-fade-in">
    <div class="flex flex-col h-[80vh]">
        <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center">
            <h3 class="text-lg font-bold text-slate-800">编辑章节</h3>
            <button onclick="document.getElementById('editChapterModal').close()" class="text-slate-400 hover:text-slate-600">✕</button>
        </div>
        <form id="editChapterForm" action="" method="POST" class="flex-1 flex flex-col overflow-hidden">
            <input type="hidden" name="novelId" value="<%= novel._id %>">
            <div class="p-6 flex-1 overflow-y-auto space-y-4">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">章节序号</label>
                    <input type="number" id="editChapterOrder" name="order" required 
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition font-mono">
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">章节标题</label>
                    <input type="text" id="editChapterTitle" name="title" required class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition">
                </div>
                <div class="flex-1 flex flex-col h-full">
                    <label class="block text-sm font-medium text-slate-700 mb-1">正文内容</label>
                    <textarea id="editChapterContent" name="content" required class="w-full flex-1 min-h-[300px] px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition font-mono text-sm leading-relaxed resize-none"></textarea>
                </div>
            </div>
            <div class="px-6 py-4 bg-slate-50 border-t border-slate-100 flex justify-end gap-3">
                <button type="button" onclick="document.getElementById('editChapterModal').close()" class="px-5 py-2 text-slate-600 hover:bg-slate-200 rounded-lg text-sm transition">取消</button>
                <button type="submit" class="px-5 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 shadow-sm transition font-medium">保存修改</button>
            </div>
        </form>
    </div>
</dialog>

<script src="//unpkg.com/alpinejs" defer></script>
<script>
    const localChapters = <%- JSON.stringify(chapters) %>;
    function openEditChapter(chapterId) {
        const chapter = localChapters.find(c => c._id === chapterId);
        if (!chapter) return;
        
        const form = document.getElementById('editChapterForm');
        const orderInput = document.getElementById('editChapterOrder');
        const titleInput = document.getElementById('editChapterTitle');
        const contentInput = document.getElementById('editChapterContent');
        
        form.action = `/chapter/${chapterId}/update`; 
        orderInput.value = chapter.order;
        titleInput.value = chapter.title;
        contentInput.value = chapter.content;
        
        document.getElementById('editChapterModal').showModal();
    }
</script>

<%- include('partials/footer') %>