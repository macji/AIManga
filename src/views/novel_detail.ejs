<%- include('partials/header') %>

<div class="max-w-6xl mx-auto px-4 mt-8" x-data="{ 
    showEditInfo: false,
    showCreateChapter: false,
    showEditChapter: false,
    editData: { id: '', title: '', order: '', content: '' }
}">
    
    <div class="mb-4">
        <a href="/" class="inline-flex items-center gap-1 text-sm text-slate-500 hover:text-indigo-600 transition-colors group">
            <span class="group-hover:-translate-x-0.5 transition-transform">←</span> 
            <span>返回首页</span>
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-8 mb-8 flex gap-8 items-start">
        <div class="w-40 h-56 bg-gradient-to-br from-slate-100 to-slate-200 rounded-lg flex-shrink-0 flex items-center justify-center text-5xl shadow-inner text-slate-400 font-serif select-none">
            <%= novel.title.substring(0,1) %>
        </div>
        
        <div class="flex-1 min-w-0 py-2">
            <div class="flex justify-between items-start">
                <div>
                    <h1 class="text-3xl font-bold text-slate-800 mb-3"><%= novel.title %></h1>
                    <div class="flex flex-wrap gap-4 text-sm text-slate-500 mb-6">
                        <span class="flex items-center gap-1.5 px-2.5 py-0.5 rounded-full <%= novel.status === 'completed' ?
                        'bg-green-100 text-green-700' : 'bg-blue-100 text-blue-700' %> font-medium text-xs">
                            <span class="w-1.5 h-1.5 rounded-full <%= novel.status === 'completed' ?
                            'bg-green-500' : 'bg-blue-500' %>"></span>
                            <%= novel.status === 'completed' ? '已完结' : '连载中' %>
                        </span>
                        <span class="flex items-center gap-1">👤 <%= novel.author || '未知作者' %></span>
                        <span class="flex items-center gap-1">📚 <%= chapters.length %> 章节</span>
                        <span class="flex items-center gap-1">📅 <%= new Date(novel.createdAt).toLocaleDateString() %></span>
                    </div>
                </div>
                
                <div class="flex gap-3">
                    <button @click="showEditInfo = true" class="px-4 py-2 bg-white border border-slate-300 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-50 hover:border-slate-400 transition shadow-sm flex items-center gap-2">
                        <span>📝</span> 修改信息
                    </button>
                    <a href="/novel/<%= novel._id %>/prompts" class="px-4 py-2 bg-indigo-50 border border-indigo-200 text-indigo-700 text-sm font-medium rounded-lg hover:bg-indigo-100 hover:border-indigo-300 transition shadow-sm flex items-center gap-2">
                        <span>⚙️</span> 提示词配置
                    </a>
                    <div class="w-px h-8 bg-slate-200 mx-1"></div>
                    <button @click="showCreateChapter = true" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 shadow-md hover:shadow-lg transition flex items-center gap-2">
                        <span>+</span> 新建章节
                    </button>
                </div>
            </div>

            <div class="relative group">
                <p class="text-slate-600 text-sm leading-relaxed whitespace-pre-line line-clamp-3 group-hover:line-clamp-none transition-all duration-300">
                    <%= novel.description || '暂无简介...' %>
                </p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-8 py-5 border-b border-slate-100 bg-slate-50/50 flex justify-between items-center">
            <h2 class="font-bold text-lg text-slate-800">章节列表</h2>
            <span class="text-xs font-medium text-slate-500 bg-slate-100 px-2 py-1 rounded-full">Total: <%= chapters.length %></span>
        </div>
        
        <% if (chapters.length === 0) { %>
            <div class="p-16 text-center text-slate-400">
                <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl">📭</div>
                <p>还没有章节，点击右上角新建一个吧</p>
            </div>
        <% } else { %>
            <div class="divide-y divide-slate-100">
                <% chapters.forEach(chapter => { %>
                    <div class="group px-8 py-5 flex items-center justify-between hover:bg-slate-50 transition-colors">
                        <div class="flex items-center gap-6 flex-1 min-w-0">
                            <span class="text-slate-300 font-mono text-lg font-bold w-8 text-right italic">#<%= chapter.order %></span>
                            <div class="min-w-0">
                                <a href="/chapter/<%= chapter._id %>" class="block text-slate-800 text-base font-medium hover:text-blue-600 transition-colors truncate mb-1">
                                    <%= chapter.title %>
                                </a>
                                <div class="flex items-center gap-3 text-xs">
                                    <span class="text-slate-400"><%= new Date(chapter.updatedAt).toLocaleString() %></span>
                                    <% if (chapter.script_data && chapter.script_data.length > 0) { %>
                                        <span class="text-blue-600 bg-blue-50 border border-blue-100 px-2 py-0.5 rounded-full flex items-center gap-1 font-medium">
                                            🎬 <%= chapter.script_data.length %> P
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity translate-x-2 group-hover:translate-x-0 duration-200">
                            <textarea id="content-<%= chapter._id %>" class="hidden"><%= chapter.content %></textarea>
                            
                            <button @click="editData = { id: '<%= chapter._id %>', title: '<%= chapter.title %>', order: '<%= chapter.order %>', content: document.getElementById('content-<%= chapter._id %>').value }; showEditChapter = true;" 
                                class="p-2 text-slate-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition" title="编辑">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                            </button>
                            
                            <form action="/chapter/<%= chapter._id %>/delete" method="POST" onsubmit="return confirm('确定要删除这个章节吗？此操作不可恢复！');">
                                <button type="submit" class="p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition" title="删除">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                                </button>
                            </form>
                            
                            <a href="/chapter/<%= chapter._id %>" class="ml-2 px-3 py-1.5 bg-slate-100 text-slate-600 text-xs font-bold rounded hover:bg-blue-600 hover:text-white transition-colors">
                                进入制作 →
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <div x-show="showCreateChapter" class="fixed inset-0 z-50 flex items-center justify-center p-4" style="display: none;" 
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100">
        <div class="absolute inset-0 bg-slate-900/40 backdrop-blur-sm" @click="showCreateChapter = false"></div>
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg relative z-10 overflow-hidden flex flex-col max-h-[90vh]">
            <div class="px-6 py-4 border-b border-slate-100 bg-slate-50 flex justify-between items-center">
                <h3 class="font-bold text-lg text-slate-800">📝 新建章节</h3>
                <button @click="showCreateChapter = false" class="text-slate-400 hover:text-slate-600 text-xl">&times;</button>
            </div>
            <form action="/chapter/create" method="POST" class="flex-1 overflow-y-auto">
                <input type="hidden" name="novelId" value="<%= novel._id %>">
                <div class="p-6 space-y-4">
                    <div><label class="block text-sm font-medium text-slate-700 mb-1">章节标题</label><input type="text" name="title" required class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500"></div>
                    <div><label class="block text-sm font-medium text-slate-700 mb-1">排序</label><input type="number" name="order" value="<%= chapters.length + 1 %>" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500"></div>
                    <div><label class="block text-sm font-medium text-slate-700 mb-1">内容</label><textarea name="content" rows="10" required class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm font-mono outline-none focus:ring-2 focus:ring-blue-500"></textarea></div>
                </div>
                <div class="px-6 py-4 border-t border-slate-100 bg-slate-50 flex justify-end gap-3">
                    <button type="button" @click="showCreateChapter = false" class="px-4 py-2 text-slate-600 hover:bg-slate-200 rounded-lg text-sm font-medium transition">取消</button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition">立即创建</button>
                </div>
            </form>
        </div>
    </div>

    <div x-show="showEditChapter" class="fixed inset-0 z-50 flex items-center justify-center p-4" style="display: none;"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100">
        <div class="absolute inset-0 bg-slate-900/40 backdrop-blur-sm" @click="showEditChapter = false"></div>
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg relative z-10 overflow-hidden flex flex-col max-h-[90vh]">
            <div class="px-6 py-4 border-b border-slate-100 bg-slate-50 flex justify-between items-center">
                <h3 class="font-bold text-lg text-slate-800">✏️ 编辑章节</h3>
                <button @click="showEditChapter = false" class="text-slate-400 hover:text-slate-600 text-xl">&times;</button>
            </div>
            <form :action="'/chapter/' + editData.id + '/update'" method="POST" class="flex-1 overflow-y-auto">
                <input type="hidden" name="novelId" value="<%= novel._id %>">
                <div class="p-6 space-y-4">
                    <div><label class="block text-sm font-medium text-slate-700 mb-1">章节标题</label><input type="text" name="title" x-model="editData.title" required class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500"></div>
                    <div><label class="block text-sm font-medium text-slate-700 mb-1">排序</label><input type="number" name="order" x-model="editData.order" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500"></div>
                    <div><label class="block text-sm font-medium text-slate-700 mb-1">内容</label><textarea name="content" x-model="editData.content" rows="10" required class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm font-mono outline-none focus:ring-2 focus:ring-blue-500"></textarea></div>
                </div>
                <div class="px-6 py-4 border-t border-slate-100 bg-slate-50 flex justify-end gap-3">
                    <button type="button" @click="showEditChapter = false" class="px-4 py-2 text-slate-600 hover:bg-slate-200 rounded-lg text-sm font-medium transition">取消</button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition">保存修改</button>
                </div>
            </form>
        </div>
    </div>

    <div x-show="showEditInfo" class="fixed inset-0 z-50 flex items-center justify-center p-4" style="display: none;"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100">
        <div class="absolute inset-0 bg-slate-900/40 backdrop-blur-sm" @click="showEditInfo = false"></div>
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg relative z-10 overflow-hidden flex flex-col max-h-[90vh]">
            <div class="px-6 py-4 border-b border-slate-100 bg-slate-50 flex justify-between items-center">
                <h3 class="font-bold text-lg text-slate-800">📝 修改基础信息</h3>
                <button @click="showEditInfo = false" class="text-slate-400 hover:text-slate-600 text-xl">&times;</button>
            </div>
            
            <form action="/novel/<%= novel._id %>/update" method="POST" class="flex-1 overflow-y-auto">
                <div class="p-6 space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div><label class="block text-sm font-medium text-slate-700 mb-1">作品名称</label><input type="text" name="title" value="<%= novel.title %>" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500"></div>
                        <div><label class="block text-sm font-medium text-slate-700 mb-1">作者</label><input type="text" name="author" value="<%= novel.author %>" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500"></div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">状态</label>
                        <select name="status" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="serial" <%= novel.status === 'serial' ? 'selected' : '' %>>连载中</option>
                            <option value="completed" <%= novel.status === 'completed' ? 'selected' : '' %>>已完结</option>
                        </select>
                    </div>
                    <div><label class="block text-sm font-medium text-slate-700 mb-1">简介</label><textarea name="description" rows="4" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500"><%= novel.description %></textarea></div>
                </div>
                <div class="px-6 py-4 border-t border-slate-100 bg-slate-50 flex justify-end gap-3">
                    <button type="button" @click="showEditInfo = false" class="px-4 py-2 text-slate-600 hover:bg-slate-200 rounded-lg text-sm font-medium transition">取消</button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition">保存信息</button>
                </div>
            </form>
        </div>
    </div>

</div>

<script src="//unpkg.com/alpinejs" defer></script>
<%- include('partials/footer') %>