<script src="//unpkg.com/alpinejs" defer></script>
<script>
    // AJAX å¯¼å…¥é€»è¾‘ (æ›´æ–°ç‰ˆ)
    async function importScriptWithAjax(alpineData, scriptContent, dispatch) {
        if (!scriptContent.trim()) {
            alpineData.errorMsg = "å†…å®¹ä¸èƒ½ä¸ºç©º";
            return;
        }

        alpineData.isSubmitting = true;
        alpineData.errorMsg = "";

        try {
            const res = await fetch('/chapter/<%= chapter._id %>/import', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ rawScript: scriptContent }) 
            });

            if (res.status === 413) throw new Error("å†…å®¹å¤ªé•¿äº†ï¼");

            const result = await res.json();

            if (result.success) {
                // [æ ¸å¿ƒ] è§¦å‘äº‹ä»¶ï¼Œæ›´æ–°çˆ¶çº§ x-data ä¸­çš„ panels
                // Alpine çš„ dispatch å¯ä»¥è®©å¤–éƒ¨ç›‘å¬
                dispatch('panels-updated', result.data);
                
                // ä¹Ÿå¯ä»¥ç›´æ¥åœ¨æˆåŠŸæç¤ºé‡ŒæŠŠ errorMsg å½“ successMsg ç”¨ä¸€ä¸‹ï¼ˆå·æ‡’åšæ³•ï¼‰
                // æ›´å¥½çš„åšæ³•æ˜¯ç”¨ toastï¼Œè¿™é‡Œç®€å•æ¸…ç©ºé”™è¯¯
                alpineData.errorMsg = ""; 
            } else {
                alpineData.errorMsg = result.message || "è§£æå¤±è´¥";
            }

        } catch (err) {
            console.error(err);
            alpineData.errorMsg = err.message || "è¯·æ±‚å‡ºé”™";
        } finally {
            alpineData.isSubmitting = false;
        }
    }

    // ... (ä¿ç•™ copyPanelPrompt, generatePrompt ç­‰å…¶ä»– JS å‡½æ•°) ...
    // æ³¨æ„ï¼šcopyPanelPrompt è¦æ”¹ä¸ºæŒ‚è½½åœ¨ window ä¸Šï¼Œæˆ–è€…ç¡®ä¿ Alpine èƒ½è°ƒç”¨åˆ°
    window.copyPanelPrompt = async function(chapterId, panelId, btn) {
        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<span>âŒ›</span>';
        btn.classList.add('opacity-75', 'cursor-wait');
        
        try {
            const res = await fetch(`/chapter/${chapterId}/panel/${panelId}/prompt`);
            const json = await res.json();
            
            if (json.success) {
                await navigator.clipboard.writeText(json.data);
                btn.innerHTML = '<span>âœ…</span>';
                btn.classList.replace('bg-blue-50', 'bg-green-50');
                btn.classList.replace('text-blue-600', 'text-green-600');
            } else {
                btn.innerHTML = '<span>âŒ</span>';
            }
        } catch (e) {
            btn.innerHTML = '<span>âŒ</span>';
        }

        setTimeout(() => {
            btn.innerHTML = originalHtml;
            btn.classList.remove('opacity-75', 'cursor-wait');
            btn.classList.replace('bg-green-50', 'bg-blue-50');
            btn.classList.replace('text-green-600', 'text-blue-600');
        }, 1500);
    };
    
    // ... (generatePrompt, copyResult ä¿æŒä¸å˜) ...
    const NOVEL_PROMPTS = {
        script: <%- JSON.stringify(novel.prompts && novel.prompts.script ? novel.prompts.script : "") %>,
        visual: <%- JSON.stringify(novel.prompts && novel.prompts.visual ? novel.prompts.visual : "") %>,
        image: <%- JSON.stringify(novel.prompts && novel.prompts.panel ? novel.prompts.panel : "") %>
    };
    
    window.generatePrompt = function(type) {
        const content = document.getElementById('sourceContent').value;
        const template = NOVEL_PROMPTS[type] || "";
        let fullPrompt = "";
        if (template.includes("{content}")) {
            fullPrompt = template.replace(/{content}/g, content);
        } else {
            fullPrompt = template + "\n\n" + content;
        }
        document.getElementById('resultOutput').value = fullPrompt;
        document.getElementById('resultOutput').focus();
    };

    window.copyResult = function(btn) {
        const output = document.getElementById('resultOutput');
        output.select();
        navigator.clipboard.writeText(output.value).then(() => {
            const originalText = btn.innerText;
            btn.innerText = 'âœ… å·²å¤åˆ¶';
            setTimeout(() => { btn.innerText = originalText; }, 2000);
        });
    };
</script>

