<%- include('partials/header') %>

<div class="flex h-[calc(100vh-64px)] overflow-hidden bg-slate-50" 
     x-data="{ promptTab: new URLSearchParams(window.location.search).get('tab') || 'script' }">

    <div class="w-64 bg-white border-r border-slate-200 flex flex-col flex-shrink-0 z-10 shadow-[4px_0_24px_-12px_rgba(0,0,0,0.1)]">
        <div class="p-6 border-b border-slate-100">
            <div class="flex items-center gap-3 text-slate-800">
                <div class="w-8 h-8 rounded-lg bg-indigo-50 text-indigo-600 flex items-center justify-center text-lg">⚙️</div>
                <h3 class="font-bold text-base">配置菜单</h3>
            </div>
        </div>
        
        <nav class="flex-1 py-6 space-y-1 overflow-y-auto custom-scrollbar">
            <button type="button" @click="promptTab = 'script'" 
                :class="{ 'bg-indigo-50 text-indigo-700 border-indigo-600': promptTab === 'script', 'text-slate-600 hover:bg-slate-50 hover:text-slate-900 border-transparent': promptTab !== 'script' }"
                class="w-full text-left px-6 py-3 text-sm font-medium transition-all flex items-center gap-3 border-l-4 group">
                <span class="text-lg opacity-80 group-hover:scale-110 transition-transform">🎬</span> 
                <span>剧本生成</span>
            </button>

            <button type="button" @click="promptTab = 'visual'" 
                :class="{ 'bg-pink-50 text-pink-700 border-pink-500': promptTab === 'visual', 'text-slate-600 hover:bg-slate-50 hover:text-slate-900 border-transparent': promptTab !== 'visual' }"
                class="w-full text-left px-6 py-3 text-sm font-medium transition-all flex items-center gap-3 border-l-4 group">
                <span class="text-lg opacity-80 group-hover:scale-110 transition-transform">👁️</span> 
                <span>视觉提取</span>
            </button>

            <button type="button" @click="promptTab = 'setting'" 
                :class="{ 'bg-purple-50 text-purple-700 border-purple-500': promptTab === 'setting', 'text-slate-600 hover:bg-slate-50 hover:text-slate-900 border-transparent': promptTab !== 'setting' }"
                class="w-full text-left px-6 py-3 text-sm font-medium transition-all flex items-center gap-3 border-l-4 group">
                <span class="text-lg opacity-80 group-hover:scale-110 transition-transform">🎨</span> 
                <span>视觉设定</span>
            </button>

            <button type="button" @click="promptTab = 'image'" 
                :class="{ 'bg-blue-50 text-blue-700 border-blue-500': promptTab === 'image', 'text-slate-600 hover:bg-slate-50 hover:text-slate-900 border-transparent': promptTab !== 'image' }"
                class="w-full text-left px-6 py-3 text-sm font-medium transition-all flex items-center gap-3 border-l-4 group">
                <span class="text-lg opacity-80 group-hover:scale-110 transition-transform">🖼️</span> 
                <span>分镜生图</span>
            </button>

            <button type="button" @click="promptTab = 'audio'" 
                :class="{ 'bg-emerald-50 text-emerald-700 border-emerald-500': promptTab === 'audio', 'text-slate-600 hover:bg-slate-50 hover:text-slate-900 border-transparent': promptTab !== 'audio' }"
                class="w-full text-left px-6 py-3 text-sm font-medium transition-all flex items-center gap-3 border-l-4 group">
                <span class="text-lg opacity-80 group-hover:scale-110 transition-transform">🗣️</span> 
                <span>语音字幕</span>
            </button>
        </nav>

        <div class="p-6 border-t border-slate-100">
            <div class="bg-slate-50 rounded-lg p-3 border border-slate-100">
                <p class="text-xs text-slate-400 mb-1">正在配置作品</p>
                <p class="text-sm font-bold text-slate-700 truncate"><%= novel.title %></p>
            </div>
        </div>
    </div>

    <div class="flex-1 flex flex-col min-w-0 bg-white">
        <div class="px-8 py-4 border-b border-slate-100 flex justify-between items-center bg-white flex-shrink-0 h-16">
            <div>
                <h2 class="font-bold text-lg text-slate-800 flex items-center gap-2">
                    <span x-text="{
                        'script': 'Text to Script Template',
                        'visual': 'Text to Visual Template',
                        'setting': 'Text to Setting Template',
                        'image': 'Card to Image Template',
                        'audio': 'Audio & Subtitle Template'
                    }[promptTab]"></span>
                    <span class="px-2 py-0.5 rounded text-xs font-normal"
                        :class="{
                            'bg-indigo-100 text-indigo-700': promptTab === 'script',
                            'bg-pink-100 text-pink-700': promptTab === 'visual',
                            'bg-purple-100 text-purple-700': promptTab === 'setting',
                            'bg-blue-100 text-blue-700': promptTab === 'image',
                            'bg-emerald-100 text-emerald-700': promptTab === 'audio'
                        }" x-text="{
                        'script': '剧本',
                        'visual': '视觉提取',
                        'setting': '设定',
                        'image': '生图',
                        'audio': '语音'
                    }[promptTab]"></span>
                </h2>
            </div>
            
            <a href="/novel/<%= novel._id %>" class="group px-3 py-1.5 text-slate-500 hover:text-slate-700 hover:bg-slate-100 rounded-lg text-sm transition flex items-center gap-1.5">
                <span class="group-hover:-translate-x-0.5 transition-transform">↩</span> 返回详情
            </a>
        </div>

        <form action="/novel/<%= novel._id %>/update" method="POST" class="flex-1 flex flex-col min-h-0 relative">
             <div class="flex-1 overflow-hidden relative bg-slate-50/30">
                
                <div x-show="promptTab === 'script'" class="absolute inset-0 flex flex-col" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 translate-y-2" x-transition:enter-end="opacity-100 translate-y-0">
                    <div class="px-8 py-4 bg-white border-b border-slate-100 flex items-center justify-between flex-shrink-0">
                        <p class="text-sm text-slate-500">将小说原文改编为包含景别、画面描述、台词的标准漫画/视频脚本。</p>
                        <code class="text-xs text-indigo-600 bg-indigo-50 px-2 py-1 rounded border border-indigo-100 font-mono">变量: {content}</code>
                    </div>
                    <div class="flex-1 p-8 flex flex-col overflow-hidden">
                        <textarea name="prompts[script]" class="flex-1 w-full p-6 border border-slate-200 rounded-xl text-sm font-mono focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none resize-none bg-white text-slate-700 leading-relaxed shadow-sm transition-shadow" placeholder="输入您的剧本生成提示词模板..."><%= novel.prompts ? novel.prompts.script : '' %></textarea>
                    </div>
                </div>

                <div x-show="promptTab === 'visual'" class="absolute inset-0 flex flex-col" style="display: none;" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 translate-y-2" x-transition:enter-end="opacity-100 translate-y-0">
                    <div class="px-8 py-4 bg-white border-b border-slate-100 flex items-center justify-between flex-shrink-0">
                        <p class="text-sm text-slate-500">从文本中提取环境、光影、人物衣着等纯视觉元素，用于辅助生图。</p>
                        <code class="text-xs text-pink-600 bg-pink-50 px-2 py-1 rounded border border-pink-100 font-mono">变量: {content}</code>
                    </div>
                    <div class="flex-1 p-8 flex flex-col overflow-hidden">
                        <textarea name="prompts[visual]" class="flex-1 w-full p-6 border border-slate-200 rounded-xl text-sm font-mono focus:ring-2 focus:ring-pink-500 focus:border-pink-500 outline-none resize-none bg-white text-slate-700 leading-relaxed shadow-sm transition-shadow" placeholder="输入您的视觉提取提示词模板..."><%= novel.prompts ? novel.prompts.visual : '' %></textarea>
                    </div>
                </div>

                <div x-show="promptTab === 'setting'" class="absolute inset-0 flex flex-col" style="display: none;" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 translate-y-2" x-transition:enter-end="opacity-100 translate-y-0">
                    <div class="px-8 py-4 bg-white border-b border-slate-100 flex items-center justify-between flex-shrink-0">
                        <p class="text-sm text-slate-500">生成用于统一画风的角色三视图、场景概念图的 Stable Diffusion / Midjourney 提示词。</p>
                        <code class="text-xs text-purple-600 bg-purple-50 px-2 py-1 rounded border border-purple-100 font-mono">变量: {content}</code>
                    </div>
                    <div class="flex-1 p-8 flex flex-col overflow-hidden">
                        <textarea name="prompts[visual_setting]" class="flex-1 w-full p-6 border border-slate-200 rounded-xl text-sm font-mono focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none resize-none bg-white text-slate-700 leading-relaxed shadow-sm transition-shadow" placeholder="输入您的视觉设定提示词模板..."><%= novel.prompts ? novel.prompts.visual_setting : '' %></textarea>
                    </div>
                </div>

                <div x-show="promptTab === 'image'" class="absolute inset-0 flex flex-col" style="display: none;" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 translate-y-2" x-transition:enter-end="opacity-100 translate-y-0">
                    <div class="px-8 py-4 bg-white border-b border-slate-100 flex items-center justify-between flex-shrink-0">
                        <p class="text-sm text-slate-500">根据单个分镜卡片的描述（Visual）生成最终画面的提示词。通常包含画质词和风格词。</p>
                        <code class="text-xs text-blue-600 bg-blue-50 px-2 py-1 rounded border border-blue-100 font-mono">变量: {content}</code>
                    </div>
                    <div class="flex-1 p-8 flex flex-col overflow-hidden">
                        <textarea name="prompts[image]" class="flex-1 w-full p-6 border border-slate-200 rounded-xl text-sm font-mono focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none resize-none bg-white text-slate-700 leading-relaxed shadow-sm transition-shadow" placeholder="例如: (Masterpiece, Best Quality), {content}, anime style --ar 16:9"><%= novel.prompts ? novel.prompts.image : '' %></textarea>
                    </div>
                </div>

                <div x-show="promptTab === 'audio'" class="absolute inset-0 flex flex-col" style="display: none;" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 translate-y-2" x-transition:enter-end="opacity-100 translate-y-0">
                    <div class="px-8 py-4 bg-white border-b border-slate-100 flex items-center justify-between flex-shrink-0">
                        <p class="text-sm text-slate-500">提取对话、旁白，生成配音台本或字幕文件（SRT/VTT）的格式。</p>
                        <code class="text-xs text-emerald-600 bg-emerald-50 px-2 py-1 rounded border border-emerald-100 font-mono">变量: {content}</code>
                    </div>
                    <div class="flex-1 p-8 flex flex-col overflow-hidden">
                        <textarea name="prompts[audio]" class="flex-1 w-full p-6 border border-slate-200 rounded-xl text-sm font-mono focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 outline-none resize-none bg-white text-slate-700 leading-relaxed shadow-sm transition-shadow" placeholder="输入您的语音字幕提示词模板..."><%= novel.prompts ? novel.prompts.audio : '' %></textarea>
                    </div>
                </div>

            </div>

            <div class="px-8 py-4 border-t border-slate-200 bg-white flex justify-end items-center gap-4 flex-shrink-0 z-10 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)]">
                <span class="text-xs text-slate-400" x-show="true" x-transition.opacity>所有修改将一次性保存</span>
                <button type="submit" class="px-6 py-2.5 bg-slate-900 text-white rounded-lg text-sm font-medium hover:bg-slate-800 shadow-lg shadow-slate-200 transition-all transform active:scale-95 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" /></svg>
                    保存所有配置
                </button>
            </div>
        </form>
    </div>

</div>

<script src="//unpkg.com/alpinejs" defer></script>
<%- include('partials/footer') %>